alias g='git'
complete -o default -o nospace -F _git g # auto-completion for g -> git
alias gs='git st'
alias gb='git branch'
alias gba='git branch -a'
alias gl='git lg'
alias gca='git commit --amend'
alias gcsa='git commit -S --amend'
alias grm='git rebase master'
alias gp='git pull'
alias gpr='git pull --rebase'
alias gmd='git merge develop'
alias gdt='git diff-tree --name-status -r HEAD^^..HEAD'
# commit pending changes, quote all args as message
function gc() {
	git commit -v -a -m "$*"
}
# sign commit with gpg
function gcs() {
	git commit -S -v -a -m "$*"
}
function gg() {
  git grep -I --color -n  "$*"
}
alias gco='git checkout'
alias gd='git diff'
# setup a tracking branch from [remote] [branch_name]
function gbt() {
	git branch --track $2 $1/$2
	git checkout $2
}
function grf() {
	rm $1
	git checkout $1
}
